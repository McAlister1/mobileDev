<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    tools:context="com.group5.forumPrototype.SelectModule"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <Spinner
        android:id="@+id/selectModuleStudentSpinner"
        android:layout_width="165dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:background="#ded8d7"
        android:entries="@array/student_spinner"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectModuleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/SelectModule"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectModuleStudentSpinner" />

    <Button
        android:layout_height="50dp"
        android:layout_width="340dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/CS991Button"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/CS991"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/selectModuleText"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="340dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/CS992Button"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/CS992"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/CS991Button"/>

    <Button
        android:layout_height="50dp"
        android:layout_width="340dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/CS993Button"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/CS993"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/CS992Button"/>

</androidx.constraintlayout.widget.ConstraintLayout>